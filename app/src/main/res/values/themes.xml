<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Readlia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:background" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:textColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="buttonBarButtonStyle"  tools:targetApi="l">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <!--<item name="windowNoTitle">true</item>
         <item name="android:windowFullscreen">true</item> Убирает время -->
    </style>
    <style name="Theme.Readlia_Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:background" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:textColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="buttonBarButtonStyle"  tools:targetApi="l">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <!--<item name="windowNoTitle">true</item>
         <item name="android:windowFullscreen">true</item> Убирает время -->
    </style>
</resources>